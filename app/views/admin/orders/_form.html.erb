<%= bootstrap_form_for [:admin, @order], html: { class: 'form' } do |f| %>

  <%= f.hidden_field :pack_id %>

<h2 class="order-title">Details commande</h2>
  <div class="order-form">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <%= f.select :quantity, quantity_attributes_for_select, {} ,{ class: 'form-control', data: { role: "quantity"}} %>
      </div>
      <div class="col-xs-12 col-sm-6">
        <%= f.select :format, format_attributes_for_select, {} ,{ class: 'form-control', data: { role: "format"}} %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <%= f.select :ingraving, ingraving_attributes_for_select, {} ,{ class: 'form-control' } %>
      </div>
      <div class="col-xs-12 col-sm-6">
        <%= f.select :vinyl_colors, vinyl_colors_attributes_for_select, {}, { class: 'form-control'} %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <%= f.select :external_sleeve, external_sleeve_attributes_for_select, {}, { class: 'form-control'} %>
      </div>
      <div class="col-xs-12 col-sm-6">
        <%= f.select :sleeve, sleeve_attributes_for_select, {}, { class: 'form-control'} %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <%= f.select :packaging, packaging_attributes_for_select, {}, { class: 'form-control'} %>
      </div>
      <div class="col-xs-12 col-sm-6">
        <%= f.select :weight, weight_attributes_for_select, {}, { class: 'form-control'} %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <%= f.select :label, label_attributes_for_select, {}, { class: 'form-control'} %>
      </div>
    </div>
  </div>

  <h2 class="order-title">Informations Artiste</h2>
  <div class="order-form">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <%= f.text_field :artist_name, class: "form-control" %>
      </div>
      <div class="col-xs-12 col-sm-6">
        <%= f.text_field :album_title, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <%= f.text_field :label_name, class: "form-control" %>
      </div>
      <div class="col-xs-12 col-sm-6">
        <%= f.number_field :num_cat, class: "form-control" %>
      </div>
    </div>
    <h2 class="order-title">Informations Client</h2>
    <div class="row">
      <div class="col-xs-12">
        <%= f.fields_for :client do |c| %>
          <%= c.text_field :email, class: "form-control" %>
        <% end %>
      </div>
    </div>
    <h2 class="order-title">Status</h2>
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <%= f.number_field :delivery_price, class: 'form-control' %>
      </div>
      <div class="col-xs-12 col-sm-6">
        <%= label_tag t('activerecord.attributes.order.total_price') %>
        <%= number_field_tag 'total_price', @order.price + @order.delivery_price, class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <%= f.select :status, status_attributes_for_select, {}, { class: 'form-control'} %>
      </div>
    </div>
  </div>
  <div class="order-form">
    <div class="row">
      <div class="col-xs-12 text-center order-btn">
        <%= f.submit t('admin.orders.action.edit'), class: "btn btn-success" %>
      </div>
  </div>
</div>
<% end %>
