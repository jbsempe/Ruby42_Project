<div class="panel panel-default">
  <div class="panel-heading"><h2><%= t('admin.orders.index.title') %></h2></div>
  <table class="table">
    <thead>
      <tr>
        <th><%= Client.human_attribute_name(:email) %></th>
        <th><%= Order.human_attribute_name(:created_at) %></th>
        <th><%= Order.human_attribute_name(:artist_name) %></th>
        <th><%= Order.human_attribute_name(:album_title) %></th>
        <th><%= Order.human_attribute_name(:label_name) %></th>
        <th><%= Order.human_attribute_name(:status) %></th>
        <th><%= Order.human_attribute_name(:total_price) %></th>
        <th><%= Order.human_attribute_name(:quantity) %></th>
        <th><%= Order.human_attribute_name(:format) %></th>
        <th><%= Order.human_attribute_name(:pack) %></th>
        <th><%= Order.human_attribute_name(:price) %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td><%= order.try(:client).try(:email) %></td>
          <td><%= l(order.created_at, format: :short) %></td>
          <td><%= order.artist_name %></td>
          <td><%= order.album_title %></td>
          <td><%= order.label_name %></td>
          <td><%= order.status %></td>
          <td><%= order.total_price %></td>
          <td><%= t("public.orders.quantities.#{order.quantity}") %></td>
          <td><%= order.format %></td>
          <td><%= order.pack_id %></td>
          <td><%= order.price %></td>
          <td><%= link_to t('admin.packs.action.edit'), edit_admin_order_path(order) %></td>
          <td><%= link_to t('admin.packs.action.destroy'), admin_order_path(order.id), method: :delete, data: { confirm: t('admin.packs.action.confirm') } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="text-center">
    <nav><ul class="pagination pagination-sm"><%= paginate @orders %></ul></nav>
  </div>
</div>
<br>
