<% if current_user %>
  <p>Future liste des commandes</p>
<% else %>
  <%= form_tag(admin_sessions_path, class: "form-signin") do %>
    <div class="login">
      <div class="row">
          <div class="col-md-12 email">
            <%= text_field_tag :email, params[:email], placeholder: t('admin.index.email'), class: "form-control", autofocus: true %>
          </div>
        </div>
        <div class="row password">
          <div class="col-md-12">
            <%= password_field_tag :password, params[:password], placeholder: t('admin.index.password'), class: "form-control" %>
          </div>
        </div>
      <div class="btn-login">
        <%= submit_tag t('admin.index.connexion'), class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
<% end %>
