<div class="pack container-fluid">
  <div class="row">
    <div class="col-md-5 text-center">
      <div class="pack-img">
        <%= image_tag @order.pack.image.url(:medium) %>
      </div>
    </div>
    <div class="col-md-7">
      <div class="pack-infos">
        <div class="pack-title">
          <strong><%= @order.pack.title %></strong>
          <span class="pack-price">
            Price: <span data-role="price"><%= @order.price %></span>CHF
            <%= icon('fa fa-question-circle', data: { toggle: "tooltip", placement: "bottom"}, title: t('public.orders.price_tooltip')) %>
          </span>
        </div>
        <div class="pack-description">
          <%= @order.pack.description %>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'form' %>